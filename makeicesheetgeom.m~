function [L, alpha, Qinval, Qmultiplier2] = makeicesheetgeom(H)

% a function to calculate the idealized ice sheet profile for a given
% ice thickness
%%
tau = 100e3; 
C = makeConstants;

L = (H.^2).*(C.g*C.rhoi)./(2.*tau);

alpha = tau./(C.rhoi.*C.g.*H);


Qinmultiplier1  = 1;

if H <= 400
    Qinval         = 2;
    Qinmultiplier2 = 0;
elseif H >400 && H <= 500
    Qinval         = 2;
    Qinmultiplier2 = 1;
elseif H > 500 && H <= 600
    Qinval         = 3;
    Qinmultiplier2 = 1;
elseif H > 600 && H <= 700
    Qinval         = 3;
    Qinmultiplier2 = 2;
    elseif H > 700 && H <= 800
    Qinval         = 3;
    Qinmultiplier2 = 3.5;




